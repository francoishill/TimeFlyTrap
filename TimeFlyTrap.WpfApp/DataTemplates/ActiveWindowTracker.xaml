<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:viewModel="clr-namespace:TimeFlyTrap.WpfApp.ViewModel"
    xmlns:wpfUtils="clr-namespace:TimeFlyTrap.WpfApp.WpfUtils">

    <DataTemplate x:Key="ActiveWindowTrackerControl" DataType="viewModel:ActiveWindowTrackerViewModel">
        <TextBox
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            VerticalContentAlignment="Stretch"
            HorizontalScrollBarVisibility="Auto"
            VerticalScrollBarVisibility="Auto"
            Text="{Binding LogText, Mode=OneWay}"
            IsReadOnly="True"
            IsReadOnlyCaretVisible="True"
            wpfUtils:TextBoxUtilities.AlwaysScrollToEnd="True" />
    </DataTemplate>

</ResourceDictionary>