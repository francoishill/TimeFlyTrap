<Window x:Class="TimeFlyTrap.WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525"
        WindowStartupLocation="CenterScreen"
        DataContext="{Binding Main, Source={StaticResource Locator}}">
    <DockPanel>

        <DockPanel.Resources>
            <ResourceDictionary Source="DataTemplates/ReportTimes.xaml" />
        </DockPanel.Resources>

        <Button
            DockPanel.Dock="Top"
            Command="{Binding ChooseJsonFileDialogCommand}"
            VerticalAlignment="Top">
            Open File
        </Button>

        <ListBox
            Margin="0 20 0 0"
            Padding='10'
            FontSize='22'
            ScrollViewer.CanContentScroll='False'
            ItemsSource="{Binding Report.ReportTimes}"
            ItemTemplate="{StaticResource ReportTimesListBoxItem}" />

    </DockPanel>
</Window>